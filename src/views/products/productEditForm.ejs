<!DOCTYPE html>
<html lang="en">

<!--Head-->
<%- include("../partials/head" ,{stylesheet:"styles", title:"Formulario de edición de producto"}) %>

	<body>
		<!--Header-->
		<%- include("../partials/header") %>
			<!-- /Header -->
			<main>
				<section class="product-creator">
					<div class="title">
						<h2 class="products-title">Editar menú</h2>
					</div>
					<div class="formulario">
						<form action="/products/edit/<%= Plato.id %>?_method=PATCH" method="POST"
							enctype="multipart/form-data">
							<div class="row-product-detail">
								<div class="col-12 col-md-6">
									<label for="title" class="form-label">Nombre del plato:</label>
									<input type="text" id="title" name="title" value="<%= Plato.title %>"
										class="form-input">
								</div>
								<div class="col-12">
									<label for="description" class="form-label">Descripción</label>
									<textarea name="description" id="description"
										class="form-input"><%= Plato.description %></textarea>
								</div>
								<div class="col-12">
									<label for="ingredients" class="form-label">Ingredientes</label>
									<textarea name="ingredients" id="ingredients"
										class="form-input"><%= Plato.ingredients %></textarea>
								</div>
								<div class="col-12 col-md-6">
									<label for="price" class="form-label">Precio del plato:</label>
									<input step="any" type="number" id="price" name="price" value="<%= Plato.price %>"
										class="form-input">
								</div>
								<div class="col-12 col-md-6">
									<label for="todaysDay" class="form-label">Menu del dia</label>
									<select name="todaysDay" id="todaysDay" class="form-input" required>
										<option value="1" <% if (Plato.todaysDay=="1" ) { %> selected <% } %> >Si
										</option>
										<option value="0" <% if (Plato.todaysDay=="0" ) { %> selected <% } %> >No
										</option>
									</select>
								</div>

								<div class="col-12 col-md-6">
									<label for="category" class="form-label">Categoría:</label>
									<select name="category" id="category" class="form-input">
										<option value="0" <% if (Plato.categoryId=="0" ) { %> selected <% } %>
												>Entrada</option>
										<option value="1" <% if (Plato.categoryId=="1" ) { %> selected <%
												} %> >Plato principal</option>
										<option value="2" <% if (Plato.categoryId=="2" ) { %> selected <% } %>
												>Postre</option>
									</select>
								</div>
								<div class="col-12 col-md-6">
									<label for="img" class="form-label">Imagen:</label>
									<img class="img-product-to-edit" src="/images/products/<%= Plato.img %>"
										width="200px">
									<input type="file" id="img" name="img" placeholder="Ej: 15" class="form-input"
										accept=".jpg, .JPG, .png">
								</div>
								<div class="detail-button">
									<button type="submit" class="create-buttom">Guardar producto</button>
								</div>
							</div>
						</form>
					</div>

				</section>
			</main>
			<!--Footer-->
			<%- include("../partials/footer") %>
				<!--Footer-->
	</body>

</html>
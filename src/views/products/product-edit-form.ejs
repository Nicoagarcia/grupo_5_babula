<!DOCTYPE html>
<html lang="en">

<!--Head-->
<%- include("../partials/head" ,{stylesheet:"styles", title:"Formulario de edición de producto"}) %>

	<body>
		<!--Header-->
		<%- include("../partials/header") %>
			<!-- /Header -->
			<main>
				<section class="product-creator">
					<div class="title">
						<h2 class="products-title">Editar menú</h2>
					</div>
					<div class="formulario">
						<form action="/products/edit/<%= productToEdit.id %>?_method=PATCH" method="POST"
							enctype="multipart/form-data">
							<div class="row-product-detail">
								<div class="col-12 col-md-6">
									<label for="title" class="form-label">Nombre del plato:</label>
									<input type="text" id="title" name="title" value="<%= plato.title %>"
										class="form-input">
								</div>
								<div class="col-12">
									<label for="description" class="form-label">Descipción</label>
									<textarea name="description" id="description"
										class="form-input"> <%= plato.description %></textarea>
								</div>
								<div class="col-12">
									<label for="ingredients" class="form-label">Ingredientes</label>
									<textarea name="ingredients" id="ingredients"
										class="form-input"><%= plato.ingredients %></textarea>
								</div>
								<div class="col-12 col-md-6">
									<label for="price" class="form-label">Precio del plato:</label>
									<input step="any" type="number" id="price" name="price" value="<%= plato.price %>"
										class="form-input">
								</div>
								<div class="col-12 col-md-6">
									<label for="todaysDay" class="form-label">Menu del dia</label>
										<select name="todaysDay" id="todaysDay" class="form-input" required>
										<option disabled selected>Elegir</option>
										<option value="true">Si</option>
										<option value="false">No</option>
										</select>
								</div>

								<div class="col-12 col-md-6">
									<label for="category" class="form-label">Categoría:</label>
									<select name="category" id="category" class="form-input">
										<option disabled selected>Elegir</option>
										<option value="Salados">Salados</option>
										<option value="Dulces">Dulces</option>
										<option value="Frios">Frios</option>
										<option value="Calientes">Calientes</option>
									</select>
								</div>
								<div class="col-12 col-md-6">
									<label for="img" class="form-label">Imagen:</label>
									<img src="/images/<%= plato.img %>" width="200px">
									<input type="file" id="img" name="img" placeholder="Ej: 15"
										class="form-input" accept=".jpg, .JPG, .png">
								</div>
								<div class="col-12">
									<button type="submit" class="create-buttom">Guardar producto</button>
								</div>
							</div>
						</form>
					</div>

				</section>
			</main>
			<!--Footer-->
			<%- include("../partials/footer") %>
				<!--Footer-->
	</body>

</html>
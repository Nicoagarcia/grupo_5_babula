<!DOCTYPE html>
<html lang="en">

<!--Head-->
<%- include("../partials/head" ,{ title:"Carrito de compras"}) %>
<link rel="stylesheet" href="/css/shop.css">

  <body>
    <!--Header-->
    <%- include("../partials/header", {stylesheet: "styles"}) %>
      <main>
        <section class="seccion-compra">
          <div class="caja-imagen">
          <!--   <img class="img-buy" src="/images/products/borsch.jpeg" alt="" /> -->
            <img class="product-image-detail" src="/images/products/<%= plato.img %>" alt="product 1">
          </div>
          <section class="detail-of-buy">
            <div class="caja-texto">
              <div class="alinear-items">
                <i class="fas fa-plus-circle"></i>
                <p>1</p>
                <i class="fas fa-minus-circle"></i>
                <div class="separated">
                  <i class="fas fa-trash"></i>
                </div>
              </div>
            </div>
            <section class="finaly-price">
              <div class="price">
                <strong>
                  <p><%= plato.title %></p>
                </strong>
              </div>
              <div class="price">
                <strong>
                  <p>Sub total:</p>
                </strong>
                <p class="separated-name-price">
                  $ <%= plato.price %>
                </p>
              </div>
              <div class="price">
                <strong>
                  <p>Env√≠o:</p>
                </strong>
                <p class="separated-name-price">$50</p>
              </div>
              <div class="price">
                <strong>
                  <p>Total:</p>
                </strong>
                <p class=" separated-name-price">$95</p>
            </section>
            </div>
            <section class="buttons_buy">
              <button>
                <p>Finalizar compra</p>
              </button>
              <button>
                <p>Seguir comprando</p>
              </button>
            </section>
          </section>
      </main>
      <!--Footer-->
      <%- include("../partials/footer") %>
        <!--Footer-->

  </body>

</html>
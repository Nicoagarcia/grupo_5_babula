<!DOCTYPE html>
<html lang="en">

<!--Head-->
<%- include("../partials/head" ,{stylesheet:"detail", title:"Detalle de Producto"}) %>

  <body>
    <!--Header-->
    <%- include("../partials/header") %>

      <main>
        <section class="main">
          <section class="featured-products">
            <div class="products">
              <article>
                <img class="product-image" src="/images/<%= plato.img %>" alt="product 1">
                <section class="purchase-product">
                  <section class="recipes-description">
                    <p class="product-name">
                      <%= plato.title %>
                    </p>
                    <p class="product-description">
                      <%= plato.description %>
                    </p>
                    <p class="product-prince">
                      $ <%= plato.price %> .-
                    </p>
                  </section>
                  <section class="buttons-product">
                    <div class="edit-product">
                      <a href="/products/edit/<%= plato.id %>">
                        <p>Editar producto</p>
                      </a>
                    </div>
                    <div class="add-to-cart">
                      <a href="/products/shop">
                        <p>Agregar al carrito</p>
                      </a>
                    </div>
                    <form action="/products/delete/<%= plato.id %>?_method=DELETE" method="POST" class="delete"><button
                        type="submit" class="button-delete">ELIMINAR</button></form>
                  </section>
                </section>
              </article>
            </div>
          </section>
      </main>
      <!--Footer-->
      <%- include("../partials/footer") %>
        <!--Footer-->

  </body>

</html>
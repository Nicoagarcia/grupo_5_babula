<!DOCTYPE html>
<html lang="en">

<!--Head-->
<%- include("../partials/head" ,{stylesheet:"styles", title:"Formulario creación de producto"}) %>

	<body>
		<!--Header-->
		<%- include("../partials/header") %>
			<!-- /Header -->
			<main>
				<section class="product-creator">
					<div class="title">
						<h2 class="products-title">Agregar nuevo menú</h2>
					</div>
					<div class="formulario">
						<form action="/products" method="POST" enctype="multipart/form-data">
							<div class="row-product-detail">
								<div class="col-12 col-md-6">
									<label for="name" class="form-label">Nombre del plato</label>
									<input type="text" id="name" name="title" placeholder="Ej: Medovik"
										class="form-input" required>
								</div>
								<div class="col-12">
									<label for="description" class="form-label">Descipción</label>
									<textarea name="description" id="description" class="form-input" required></textarea>
								</div>
								<div class="col-12">
									<label for="ingredients" class="form-label">Ingredientes</label>
									<textarea name="ingredients" id="ingredients" class="form-input" required></textarea>
								</div>

								<div class="col-12 col-md-6">
									<label for="price" class="form-label">Precio del plato</label>
									<input type="number" id="price" name="price" placeholder="Ej: 800"
										class="form-input" required>
								</div>
								<div class="col-12 col-md-6">
									<label for="todaysDay" class="form-label">Menu del dia</label>
										<select name="todaysDay" id="todaysDay" class="form-input" required>
										<option disabled selected>Elegir</option>
										<option value="true">Si</option>
										<option value="false">No</option>
										</select>
								</div>
								<div class="col-12 col-md-6">
									<label for="category" class="form-label">Categoría:</label>
									<select name="category" id="category" class="form-input" required>
										<option disabled selected>Elegir</option>
										<option value="Salados">Salados</option>
										<option value="Dulces">Dulces</option>
										<option value="Frios">Frios</option>
										<option value="Calientes">Calientes</option>
										
									</select>
								</div>
								<div>

								</div>

								<div class="col-12 col-md-6">
									<form action="/products" method="POST" enctype="multipart/form-data">
										<input type="file" name="product_image" accept=".jpg, .JPG, .png">

										<button class="create-buttom" type="submit" name="send-product">Agregar
											producto</button>

									</form>
								</div>
						</form>
				</section>
			</main>
			<!--Footer-->
			<%- include("../partials/footer") %>
				<!--Footer-->
	</body>

</html>
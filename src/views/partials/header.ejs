<header>
    <section class="menu">
        <div class="menu-left">
            <div class="bars">
                <i class="fas fa-bars"></i>
            </div>
            <div class="name">
                <a href="/">ba</a> <br>
                <a href="/">bula</a>
            </div>
        </div>
        <div class="menu-right">
            <a href="/products">
                <p class=text-button-menu>Todos los menús</p>
            </a>
            <a href="/products/shop" span title="Carrito"><i class="fas fa-shopping-cart"></i></a>

             <!-- Si el usuario esta logeado y la categoria de un usuario logeado es Admin que me muestre el icono de crear producto-->
            <% if (locals.userLogged && locals.userLogged.category == "Admin") { %>
            <a href="/products/create" span title="Crear producto"><i class="fas fa-cart-plus"></i></a>
            <% } %>
            <% if (locals.isLogged) { %>
                <a class="avatar&text" href="/user/profile"><img src="/images/users/<%= locals.userLogged.avatar %>"
                        width="40" style="border-radius: 100%;">
                    <%= locals.userLogged.firstName%>
                </a>
                <a href="/user/logout">Cerrar sesión</a>
                <% } else { %>
                    <a class="nav-link" href="/user/register">Registrarse</a>
                    <a class="nav-link" href="/user/login">Ingresar</a>
                    <% } %>
        </div>
    </section>
    </div>
    </section>
    <section class="banner">
        <div class="banner-logo">
            <a href="/"><img src="/images/site/logo-babula.svg" alt="Logo ba bula">
        </div>
        <div class="banner-text"><a href="/">
                <h1>Ba Bula</h1>
                <h2>SABORES EURO-ASIÁTICOS</h2>
            </a>
        </div>
    </section>
